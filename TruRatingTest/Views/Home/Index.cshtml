@model TruRatingTest.ViewModels.UsersListModel

<br />
<br />

<div class="panel panel-primary">
    <div class="panel-heading">
        Rating Management Users
    </div>
    <div class="panel-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        User Name
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                <tr>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.EmailAddress
                    </td>
                    <td>
                        <a class="btn btn-success"
                           href="@("/EditUser/Index?userId=" + user.Id)">
                            Edit
                        </a>
                        <a class="btn btn-danger"
                           href="@("/Home/Delete?Id=" + user.Id)">
                           Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
